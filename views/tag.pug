extends layout

include mixins/_storeCard

block content
	div.inner
		h2 Tag: #{tag}
		ul.tags
			each t in tags
				li.tag
					a.tag__link(href=`/tags/${encodeURI(t._id)}` class=(t._id === tag ? "tag__link--active" : ""))
						span.tag__text #{t._id}
						span.tag__count #{t.count}
		div.stores
			each store in stores
				+storeCard(store)