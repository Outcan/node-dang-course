mixin review(review)
	div.review__header
		div.review__author
			img.avatar(src=review.author.gravatar alt=review.author.name)
			p #{review.author.name}
		div.review__stars(title=`Rated ${review.rating} out of 5 stars`)
			= `★`.repeat(review.rating)
			= `☆`.repeat(5 - review.rating)
		time.review__time(datetime=review.created)= h.moment(review.created).fromNow()

	div.review__body
		p #{review.text}